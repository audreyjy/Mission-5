
@{
    ViewData["Title"] = "Movie List"; 
}

@model List<FormResponse> 

<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model) //enables user to see all of the movies in the database 

            {
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-entryid="@x.EntryId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="DeleteMovie" asp-route-entryid="@x.EntryId">Delete</a></td>
        </tr>
            }
        </tbody>
</table>